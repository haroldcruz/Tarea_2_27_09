<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    @Styles.Render("~/Content/css") <!-- Mantiene tu CSS -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar principal -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio del sistema", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Registrar Tarea", "Nueva", "Tareas")</li>
                    <li>@Html.ActionLink("Ver Tareas", "Lista", "Tareas")</li>
                    <li>@Html.ActionLink("Estadísticas / Mis Tareas", "Estadistica", "Tareas")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account")</li>
                        <li>@Html.ActionLink("Registrarse", "Register", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Cerrar sesión", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    <!-- Scripts originales -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- Toast de mensajes de login -->
    <script>
        $(document).ready(function() {
            // Función para mostrar toast
            function mostrarToast(mensaje, tipo) {
                var toast = document.createElement('div');
                toast.textContent = mensaje;
                toast.style.position = 'fixed';
                toast.style.top = '20px';
                toast.style.right = '20px';
                toast.style.padding = '10px 20px';
                toast.style.borderRadius = '5px';
                toast.style.boxShadow = '0 2px 5px rgba(0,0,0,0.3)';
                toast.style.zIndex = '9999';
                toast.style.color = '#fff';
                toast.style.backgroundColor = tipo === "success" ? "#28a745" : "#dc3545";
                document.body.appendChild(toast);

                setTimeout(function() {
                    toast.remove();
                }, 3000);
            }

            // Mensaje de éxito
            var mensajeExito = @Html.Raw(Json.Encode(Session["MensajeLogin"]));
            if (mensajeExito) {
                mostrarToast(mensajeExito, "success");
                @{ Session.Remove("MensajeLogin"); }
            }

            // Mensaje de error
            var mensajeError = @Html.Raw(Json.Encode(TempData["LoginError"]));
            if (mensajeError) {
                mostrarToast(mensajeError, "error");
                // TempData se limpia automáticamente después de leerse
            }
        });
    </script>
</body>
</html>
