@model List<Tarea2.Models.Tarea>
@{
    ViewBag.Title = "Estadísticas / Mis Tareas";
}

<h2>Mis Tareas y Calificaciones</h2>

<!-- Panel de estadísticas generales -->
<div class="estadisticas-panel mb-4">
    <p><strong>Total de tareas:</strong> @Model.Count</p>
    <p><strong>Promedio general:</strong> @(Model.Any() ? Model.Average(t => t.PromedioCalificacion).ToString("F1") : "0") / 5</p>
    <p><strong>Total de comentarios:</strong> @Model.Sum(t => t.Calificaciones.Count)</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No tienes tareas registradas todavía.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Promedio</th>
                <th>Comentarios (ult. 3)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
            {
                var ultimasCalificaciones = tarea.Calificaciones
                                                 .OrderByDescending(c => c.Fecha)
                                                 .Take(3)
                                                 .ToList();

                <tr>
                    <td>@tarea.Titulo</td>
                    <td>@tarea.Descripcion</td>
                    <td>@tarea.PromedioCalificacion.ToString("F1") / 5</td>
                    <td>
                        @if (ultimasCalificaciones.Any())
                        {
                            <ul style="padding-left: 15px; margin: 0;">
                                @foreach (var cal in ultimasCalificaciones)
                                {
                                    <li><strong>@cal.Usuario</strong> (@cal.Fecha.ToString("dd/MM/yyyy HH:mm")): @cal.Comentario</li>
                                }
                                @if (tarea.Calificaciones.Count > 3)
                                {
                                    <li>... Ver más comentarios</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Aún no hay comentarios.</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
